{
  "settings": {
    "analysis": {
      "analyzer": {
        "romaji_analyzer": {
          "char_filter": ["icu_normalizer"],
          "tokenizer": "kuromoji_tokenizer",
          "filter": ["romaji_readingform", "2_3_grams"]
        }
      },
      "filter": {
        "romaji_readingform": {
          "type": "kuromoji_readingform",
          "use_romaji": true
        },
        "2_3_grams": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 3
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "name": {
        "type": "text",
        "analyzer": "romaji_analyzer"
      },
      "search_key": {
        "type": "text",
        "analyzer": "romaji_analyzer"
      }
    }
  }
}
